<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.LastPage.lastPgae"
    android:background="#aaa"
    >
    <LinearLayout
        android:id="@+id/updatelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layoutDirection="ltr"
        >
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/newlogo"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:text="תודה שביצעת טרייד-אין איתנו להשלמת העסקה ולקבלת פרטי העסקה מלא את מספר הטלפון ואת כתובת הדואר האלקטרונית שלך"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:fontFamily="@font/myfont"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="25dp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:text="מספר טלפון"
            android:textColor="@color/black"
            android:fontFamily="@font/myfont"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="25dp"

            />
        <EditText
            android:id="@+id/phonenumber"
            android:fontFamily="@font/myfont"
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext"
            android:textSize="32sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:maxLines="1"
            android:maxLength="10"
            android:digits="+1234567890"
            android:inputType="phone"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="דואר אלקטרוני"
            android:textSize="40sp"
            android:textColor="@color/black"
            android:fontFamily="@font/myfont"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="25dp"
            />
        <com.example.tkfinalproject.Utility.AutoResizeEditText
            android:fontFamily="@font/myfont"
            android:id="@+id/email"
            android:layout_width="325dp"
            android:layout_height="47dp"
            android:background="@drawable/edittext"
            android:textSize="32sp"
            android:layout_gravity="center"
            android:inputType="textEmailAddress"
            android:gravity="center"
            maxLines="1"
            android:maxLength="25"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890@."
            />
        <Button
            android:id="@+id/finishtradein"
            android:layout_width="350dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="75dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/button"
            android:text="להשלמת עסקת הטרייד-אין"
            android:textSize="28sp"
            android:fontFamily="@font/myfont"
            android:enabled="false"
            />







    </LinearLayout>

</ScrollView>