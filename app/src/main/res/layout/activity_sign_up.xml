<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.SignUp.SignUp"
    android:background="#aaa"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layoutDirection="ltr"
        >
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/newlogo"
        android:layout_gravity="center"
        android:layout_marginTop="30sp"
        android:contentDescription="TODO" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/firstname"
        android:textSize="40sp"
        android:textColor="@color/black"
        android:fontFamily="@font/myfont"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="10sp"
        />
    <EditText
        android:id="@+id/name"
        android:fontFamily="@font/myfont"
        android:hint="לפחות 8 תווים"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext"
        android:textSize="32sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:maxLines="1"
        android:maxLength="15"
        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890"
        android:inputType="textFilter"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="15sp"
        android:fontFamily="@font/myfont"
        android:gravity="center"
        android:text="סיסמה"
        android:textColor="@color/black"
        android:textSize="40sp" />

    <EditText
        android:hint="לפחות 6 תווים"
        android:fontFamily="@font/myfont"
        android:id="@+id/passowrd"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext"
        android:textSize="32sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:maxLines="1"
        android:maxLength="15"
        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890"
        android:inputType="textPassword"
        android:drawableRight="@drawable/baseline_visibility_off_24"
        android:paddingRight="10dp"
        android:longClickable="false"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="אימות סיסמה"
        android:textSize="40sp"
        android:textColor="@color/black"
        android:fontFamily="@font/myfont"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="15sp"
        />
    <EditText
        android:id="@+id/passowrdeq"
        android:fontFamily="@font/myfont"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext"
        android:textSize="32sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:maxLines="1"
        android:maxLength="15"
        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890"
        android:inputType="textPassword"
        android:drawableRight="@drawable/baseline_visibility_off_24"
        android:paddingRight="10dp"
        android:longClickable="false"
        />
    <Button
        android:id="@+id/Submit"
        android:layout_width="220dp"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="50dp"
        android:background="@drawable/button"
        android:text="הירשם"
        android:textSize="35sp"
        android:fontFamily="@font/myfont"
        />
    </LinearLayout>
</ScrollView>